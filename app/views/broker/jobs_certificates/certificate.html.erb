<!doctype html>
<html>
<head>
  <meta charset='utf-8'/>
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet">
  <%= stylesheet_link_tag wicked_pdf_asset_base64("pdf") %>
</head>
<body>
<div id="page-2" class="alwaysbreak page page-default">
  <div class="banner-container banner-short">
    <img class="smalljobs-logo-img" src="<%= wicked_pdf_asset_base64 'sj-logo.png' %>">
    <div class="group-logos">
      <% if @organization.logo.present? %>
          <img class="others-logo-img" src="<%= @organization.logo.url(:web, :normal) %>">
      <% end %>
    </div>
  </div>

  <div class="body-container">
  <div class="row standard-text margin-top-40">
    <div class="column">
      <%= @seeker.firstname %> <%= @seeker.lastname %><br>
      <%= @seeker.street %><br>
      <%= @seeker.place.zip %> <%= @seeker.place.name %>
    </div>


    <div class="column padding-left-60">
      <%= @organization.name %><br>
      <%= @organization.street %><br>
      <%= @organization.place.zip %> <%= @organization.place.name %>
    </div>

  </div>



  <div class="font-bigger font-bold margin-top-40">
    Arbeitszeugnis
  </div>
  <div class="standard-text margin-top-20">
    <%= @jobs_certificate.content.html_safe %>
  </div>


  <div class="row margin-top-40">
    <div class="column column-left">
      <div class="signature">
      </div>
      <div class="font-smaller">Ort, Datum</div>
    </div>
    <div class="column column-right">
      <div class="signature">
      </div>
      <div class="font-smaller">Unterschrift</div>
    </div>
  </div>
  </div>

</div>
</body>
</html>