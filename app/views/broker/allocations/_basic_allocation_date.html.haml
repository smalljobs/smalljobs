
.form-horizontal.sj-label-left
  .form-group
    = label_tag :last_change,  "Datum", class: "control-label col-xs-12 col-md-4 col-lg-3"
    .col-xs-12.col-md-8.col-lg-9
      = allocation.last_change_of_state.strftime("%d.%m.%Y")
.form-horizontal.sj-label-left
  .form-group
    = label_tag :title,  "Job", class: "control-label col-xs-12 col-md-4 col-lg-3"
    .col-xs-12.col-md-8.col-lg-9
      = link_to job.title, edit_broker_job_path(job)

.form-horizontal.sj-label-left
  .form-group
    = label_tag :feedback_seeker,  "JugendlicheR", class: "control-label col-xs-12 col-md-4 col-lg-3"
    .col-xs-12.col-md-8.col-lg-9
      = link_to allocation.seeker.name, edit_broker_seeker_path(allocation.seeker)
      - if @allocation.active? or @allocation.finished?
        = text_area_tag(:feedback_seeker,'', class: 'form-control', placeholder: 'Feedback JugendlicheR')
  - if @allocation.active? or @allocation.finished?
    .form-group
      .col-md-offset-4.col-lg-offset-3.col-md-8.col-lg-9
        = button_tag type: :button,  class: "btn btn-success allocation_btn" do
          = "Speichern"

.form-horizontal.sj-label-left
  .form-group
    = label_tag :feedback_provider,  "ArbeitgerIn ", class: "control-label col-xs-12 col-md-4 col-lg-3"
    .col-xs-12.col-md-8.col-lg-9
      = link_to allocation.job.provider.name, edit_broker_provider_path(allocation.job.provider)
      - if @allocation.active? or @allocation.finished?
        = text_area_tag(:feedback_provider,'', class: 'form-control', placeholder: 'Feedback ArbeitgebendeR')
  - if @allocation.active? or @allocation.finished?
    .form-group
      .col-md-offset-4.col-lg-offset-3.col-md-8.col-lg-9
        = button_tag type: :button,  class: "btn btn-success allocation_btn" do
          = "Speichern"