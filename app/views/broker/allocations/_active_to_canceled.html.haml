%div.modal.fade.js-active-to-canceled-modal-rc{id: "active_to_canceled_modal"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %button.close{"data-dismiss": "modal", type: "button"} &times;
        %h2= "Anstellung abbrechen"
      %div.modal-body
        %input{type: "checkbox", checked: "true"}
          = "Nachricht an "
          = @allocation.seeker.name
          = ":"
        %div.form-control.resize-vertical.textarea{contenteditable: true}
          = "Hallo #{@allocation.seeker.name}"
          %br
          = "Deine Anstellung bei #{@allocation.job.provider.name} wurde beendet."
          %br
          = "Für Fragen schreibe uns hier."
        %br
        - if @allocation.seeker.app_user_id.nil?
          %p
            = "Keine App für Messaging installiert. Per Telefon Kontakt aufnehmen"
            %a{href: "tel:#{@allocation.seeker.mobile}"}
              = @allocation.seeker.mobile
        - if ENV['ROCKET_CHAT_URL'].blank?
          %button.btn.btn-success.cancel_state
            = "Anstellung abbrechen"
        - else
          %button.btn.btn-success.cancel_state.js-active-to-canceled-rc{data: {href: "#{message_broker_rocketchats_path}"}}
            = "Anstellung abbrechen"
      %div.modal-footer
        = render 'messages'
